/* pages/shopcart/shopcart.wxss */
.item-select {
  width: 50rpx;
  height: 50rpx;
  margin-left: 20rpx;
  margin-right: rpx;
}
.cart-container {
  display: flex;
  align-items: center;
  position: relative;
  margin-bottom: 14rpx;
}
.cart-container .item-image {
  width: 180rpx;
  height: 180rpx;
  margin: 30rpx 20rpx 30rpx 0;
}
.cart-container .line {
  position: absolute;
  bottom: 0;
  right: 0;
  left: 0;
  width: 100%;
  height: 14rpx;
  background: #f2f2f2;
}
.info-box {
  display: flex;
  flex-flow: column;
  justify-content: space-between;
  flex: 1;
  padding: 10rpx 30rpx 10rpx 0;
}
.info-box .info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 50rpx;
}
.info-box .info .title {
  flex: 1;
  font-size: 30rpx;
}
.info-box .info-count {
  display: flex;
  justify-content: space-between;
  padding: 0 16rpx 0 0;
}
.info-box .info-count .calculate {
  display: flex;
}
.info-box .info-count .calculate .number {
  text-align: center;
  width: 60rpx;
}
.info-box .info-count .calculate .plus,
.info-box .info-count .calculate .minus {
  width: 80rpx;
  text-align: center;
}
.info-box .info-count .calculate .active {
  background: #f2f2f2;
}
.bottom-total {
  position: fixed;
  z-index: 1;
  width: 100%;
  bottom: 0;
  right: 0;
  left: 0;
  height: 120rpx;
  background: #f8873c;
  display: flex;
  align-items: center;
}
.bottom-total .total-price {
  margin-left: 24rpx;
}
.bottom-total .button-red {
  position: fixed;
  right: 0;
  width: 40%;
  line-height: 120rpx;
  border-radius: 0;
  color: #fff;
  background: red;
}
.cart-empty {
  display: flex;
  flex-flow: column;
  align-items: center;
}
.cart-empty .cart-image {
  width: 50%;
  height: 360rpx;
  margin-top: 130rpx;
  margin-bottom: 50rpx;
}
